/* pages/me/myMatch/matchCode/matchCode.wxss */

.main{
  text-align: center;
  padding: 20rpx;
}
.item{
  padding: 20rpx;
  border: 1px solid #EEE;
  background-color: #FFF;
  border-radius: 8rpx;
}
.item .title{
  padding: 20rpx 0;
  border-bottom: 1px solid #EEE;
  margin-bottom: 40rpx;
  color: #3498db;
}
image{
  background-color: rgba(252,157,154,0.2);
  width: 400rpx;
  height: 400rpx;
}
.text{
  padding: 40rpx 0;
  font-size: 30rpx;
}

.top image{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
}
.top{
  background-color:#FFF;
  padding-left: 200rpx;
  border-radius: 8rpx;
  border:1px solid #eee;
  position: relative;
  height: 200rpx;
  overflow: hidden;
   margin-bottom: 20rpx;
}

.top .label{
  background-color: rgba(255,0,0,0.7);
  display: block;
  padding: 6rpx 20rpx;
  font-size: 26rpx;
  position: absolute;
  left: 100rpx;
  transform: translateX(-50%);
  color: #fff;
}
.top .context{
  overflow: hidden;
  color: #666;
  padding:10rpx 20rpx;
  text-align: left;
}
.top .context .name{
  color: #3b8de3;
  font-size: 38rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.top .context view{
  font-size: 30rpx;
}