/* pages/me/myMatch/ranking/ranking.wxss */
page{
  box-sizing: border-box;
  padding: 20rpx;
}
.main{
  padding: 20rpx;
  background-color: #FFF;
}
.title{
  padding:20rpx 0;
  text-align: center;
  position: relative;
  color: #3498db;
  border-bottom: 1px solid #EEE;
  font-size: 30rpx;
}
.title span{
  position: absolute;
  top: 20rpx;
  left: 0;
  bottom: 0;
  color: #000;
  font-size: 34rpx;
}
.item{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
}
.middle{
  flex: 1;
}
.middle image{
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx;
  border-radius: 40rpx;
}
.middle text{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #999;
}
.item .left{
  padding: 0 20rpx;
}
.item .right{
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #999;
}



.top image{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
}
.top .label{
  background-color: rgba(255,0,0,0.7);
  display: block;
  padding: 6rpx 20rpx;
  font-size: 26rpx;
  position: absolute;
  left: 100rpx;
  transform: translateX(-50%);
  color: #fff;
}
.top{
  background-color:#FFF;
  padding-left: 200rpx;
  border-radius: 8rpx;
  border:1px solid #eee;
  position: relative;
  height: 200rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}


.top .context{
  overflow: hidden;
  color: #666;
  padding: 10rpx 20rpx;
}
.top .context .name{
  color: #3b8de3;
  font-size: 38rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.top .context view{
  font-size: 30rpx;
}

.tail{
  padding: 40rpx;
  font-size: 40rpx;
  color: red;
  text-align: center;
}
.my{
  background-color: #FFF;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 8rpx;
}
.my .title{
  color: #000;
}
.my span{
  font-size: 40rpx;
  display: inline-block;
  min-width: 200rpx;
  padding: 20rpx 0;
  color: red;
}