/* pages/FishingGroundDetails/FishingGroundDetails.wxss */
page{
  background-color: #e5e5e5;
  font-size:28rpx;
}
.head{
  display: flex;
  font-size:28rpx;
  line-height: 40rpx;
  background-color: rgba(50, 137, 199, 1);
  text-align: center;
  align-items: center;
  height: 240rpx;
  padding: 0 20rpx;
}
.main{
  padding: 0 20rpx;
}

.introduceIcon{
    color: #99CC00;
}

.printIcon{
  color: #FF3399;
}
.chargeIcon{
  color: #009933;
}
.equipmentIcon{
  color: #66CC00;
}

.pd-top330{
  padding-top: 330rpx;
}
.fly{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  z-index: 10;
}
.address{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.head .cover{
  height: 200rpx;
  width: 200rpx;
  margin-right: 20rpx;
}
.head .left{
  position: relative;
  height:200rpx;
}
.head .left span{
  position: absolute;
  width: 174rpx;
  height: 46rpx;
  line-height: 40rpx;
  background-color: rgba(37, 155, 36, 1);
  color: rgba(255, 255, 255, 1);
  text-align: center;
  font-family: Arial;
  top: 0;
  left: 0;
  margin-left: 14rpx;
}
.head .context{
  color: #FFF;
  line-height: 50rpx;
  text-align: left;
  overflow: hidden;
}
.head .context .label{
  border-bottom:1px solid rgba(240, 240, 242, 1);
  height: 100rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.address text{
  display: block;
}
.nav{
  display: flex;
  font-size: 28rpx;
  background-color: #FFF;
  -webkit-box-shadow: 0 2rpx 10rpx rgba(39,54,78,0.4);
  box-shadow: 0 2rpx 10rpx rgba(39,54,78,0.4);
  position: relative;
  z-index: 11;
}
.n-item{
  width: 25%;
  line-height: 80rpx;
  text-align: center;
  color: #000;
  border-bottom: 6rpx solid transparent;
  box-sizing: border-box;
  margin: 0 20rpx;
}
.nav .on{
  border-bottom: 6rpx solid #4481EB;
  color: #4481EB;
}
.count{
  line-height: 80rpx;
  color: #E51C23;
  padding-left: 32rpx;
  font-size: 28rpx;
  background-color: #fff;
}
.ticket{
  padding: 330rpx 20rpx 20rpx 20rpx;
}
.ticket .dad .title{
  font-size: 30rpx;
  margin-top: 20rpx;
}
.ticket .dad .child{
  display: flex;
  align-items: center;
  background-color: #97DDFF;
  margin: 20rpx 0;
  border-radius: 12rpx;
  position: relative;
  color: #FFF;
}
.pay{
  position: absolute;
  z-index: 7;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fff;
  padding: 20rpx 30rpx;
  color: #4481eb;
  border-radius: 6rpx;
}
.ticket .dad .child .price{
  padding:  0 30rpx;
  text-align: center;
  margin: 10rpx 0;
  border-right: 1px solid #FFF
}
.ticket .dad .child .describe{
  padding: 0 20rpx;
}
.ticket .dad .child .describe text{
    display: block;
    line-height: 60rpx;
    width: 200rpx;
    height: 60rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.putTheFish {
  padding: 330rpx 20rpx 20rpx 20rpx;
}
.putTheFish .dad{
  padding-top: 20rpx;
}
.putTheFish .images{

}
.images image:nth-child(3n){
  margin-right: 0;
}
.putTheFish image{
  width: 32%;
  height: 200rpx;
  margin-bottom: 6rpx;
  margin-right: 2%;
}
.putTheFish .child{
  padding: 20rpx;
  border-bottom: 1px solid #F8F8F8;
  background-color: #FFF;
  margin-bottom: 20rpx;
  color: #515151;
  border-radius: 8rpx;
}
.putTheFish .child .time{
    color: rgb(189, 187, 189) ;
    line-height: 30rpx;
    margin-bottom: 10rpx; 
}
.putTheFish .child .round{
   width: 20rpx;
   height: 20rpx;
   border-radius: 50%;
   background-color: #FFF;
   display: inline-block;
   transform: translateX(-30rpx); 
}
.putTheFish .child .context{
  text-align: justify;
  margin-bottom: 10rpx;
}

.putTheFish .child .lable{
  width: 110rpx;
  height: 40rpx;
  line-height: 20px;
  border-radius: 6rpx;
  background-color: rgba(10, 173, 16, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 24rpx;
  text-align: center;
  font-family: Arial;
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.flex-shrink{
  flex-shrink:0
}



