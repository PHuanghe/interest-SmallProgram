.fishDetails{
  
}
.fishDetails .info {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx;
  background-color: #FFF;
}
.fishDetails .info text{
  flex-grow: 1 ;
  padding:0 20rpx;
}
.fishDetails .info .roundIcon{
  border:1px solid #87CEFF;
  border-radius: 50%;
  padding: 8rpx;
  color: #87CEFF;
}

.fishDetails .child{
  padding: 20rpx 20rpx 0 20rpx;
  background-color: #FFF;
}
.bottomLine{
  border-bottom: 1px solid #e5e5e5;
}

.fishDetails .child .sub{
  padding: 10rpx 0 10rpx 56rpx;
  flex-wrap:wrap;
  color: #666;
}
.fishDetails .child .sub .item{
  width: 33.33%;
  flex-shrink:0;
  line-height: 50rpx;
}
.fishDetails .child .sub image{
    width: 200rpx;
    height: 200rpx;
    margin-top: 4rpx;
    margin-right: 10rpx;
}

.interaction text{
  display: block;

}
.interaction .item-head{
   display: flex;
   align-items: center; 
}
.interaction .item-head .follow{
    text-align: center;
    padding: 6rpx 0;
    width: 130rpx;
    border:1px solid rgb(68, 129, 235);
    color: rgb(68, 129, 235);
    border-radius: 50rpx;
    flex-shrink:0;
}
.interaction .item-head .name{
  flex-grow: 1 ;
  padding: 0 20rpx;
  text-align:justify;
}
.interaction .item-head .name .level{
  font-size: 20rpx;
  background-color: #da1;
  color: #FFF;
  display: inline-block;
  margin-left: 20rpx;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
}
.interaction .item-head image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  flex-shrink:0;
}
.interaction .context .imgBox{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}
.interaction .context image{
    width: 230rpx;
    height: 230rpx;
}
.interaction .tail{
  display: flex;
  align-items: center;
  color: #666;
}
.interaction .tail span{
  flex-grow: 1 ;
}